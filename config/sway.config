set $mod Mod4
floating_modifier $mod
title_align center

gaps inner 5
gaps outer 15
default_border pixel 3
for_window [app_id="mpv"] floating enable, border pixel 1, move position 1100px 560px

hide_edge_borders smart
xwayland disable

# Colors
client.focused			#FFFFFFFF #FFFFFFFF #330000 #FFFFFFFF
client.unfocused		#FFFFFF22 #FFFFFF22 #330000 #FFFFFF22

# Key Bindings
bindsym $mod+p			exec mpv `wl-paste`
bindsym $mod+Return		exec alacritty
bindsym $mod+o			exec launchBrowser
bindsym $mod+d			exec dmenu-wl_run -i
bindsym $mod+Shift+b	border toggle 3
bindsym $mod+q			kill
bindsym $mod+Shift+r	reload

# Prompt To Shutdown
bindsym $mod+x			exec [ "$(echo -e "No\nYes" | dmenu-wl -i -p "Shutdown" )" = "Yes" ] && poweroff

# Special Keys
bindsym XF86AudioRaiseVolume	exec volume +1
bindsym XF86AudioLowerVolume	exec volume -1
bindsym XF86AudioMute			exec volume 0
bindsym XF86MonBrightnessUp		exec brightness +1%
bindsym XF86MonBrightnessDown	exec brightness 1%-

# Move & Focus
bindsym $mod+h			focus left
bindsym $mod+j			focus down
bindsym $mod+k			focus up
bindsym $mod+l			focus right
bindsym $mod+Shift+h	move left
bindsym $mod+Shift+j	move down
bindsym $mod+Shift+k	move up
bindsym $mod+Shift+l	move right

# Positioning
bindsym $mod+c split h
bindsym $mod+v split v
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Window Behaviour
bindsym $mod+f              fullscreen toggle
bindsym $mod+s              sticky toggle
bindsym $mod+Shift+space	floating toggle
bindsym $mod+space			focus mode_toggle

# Go To Container
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move Windows
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Change Modes
bindsym $mod+r mode "resize"
bindsym $mod+g mode "resizeGaps"
bindsym $mod+m mode "move"

mode "resize" {
 	bindsym h resize shrink	width	10 px
 	bindsym j resize grow	height	10 px
 	bindsym k resize shrink	height	10 px
 	bindsym l resize grow	width	10 px

 	bindsym Shift+h resize shrink	width	2 px
 	bindsym Shift+j resize grow     height	2 px
 	bindsym Shift+k resize shrink   height	2 px
 	bindsym Shift+l resize grow     width	2 px

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}
mode "resizeGaps" {
	bindsym h gaps outer current minus 4
	bindsym j gaps inner current minus 4
	bindsym k gaps inner current plus  4
	bindsym l gaps outer current plus  4

    bindsym Shift+h gaps outer current minus 1
    bindsym Shift+j gaps inner current minus 1
    bindsym Shift+k gaps inner current plus  1
    bindsym Shift+l gaps outer current plus  1

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+g mode "default"
}
mode "move" {
    bindsym h move left     30px
    bindsym j move down     30px
    bindsym k move up       30px
    bindsym l move right    30px

    bindsym Shift+h move left	1px
    bindsym Shift+j move down	1px
    bindsym Shift+k move up		1px
    bindsym Shift+l move right	1px

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"
}

input type:keyboard {
    xkb_layout "tr"
	xkb_model "acer_laptop"
    xkb_options caps:escape
	repeat_delay 200
	repeat_rate 50
}
input type:touchpad {
	tap enabled
	pointer_accel 0
    scroll_factor 0.5
}

bar {
    position bottom
    status_command while ~/.config/swaybar.sh; do sleep 30; done
	font pango:Fantasque Sans Mono 12
	height 30
	workspace_buttons true

    colors {
        background	#00000066
        statusline	#ffffff
		separator	#ff0000
		focused_workspace	#00000066  #00000066 #FFFFFFFF
		active_workspace	#00000066  #00000066 #FFFFFFFF
		inactive_workspace	#00000066  #00000066 #FFFFFF66
		urgent_workspace	#00000066  #00000066 #FFFFFFFF
    }
}

output "*" bg ~/.config/Wallpaper.png fill
exec mako --config ~/.config/mako.config
