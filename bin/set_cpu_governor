#!/bin/sh

paths=/sys/devices/system/cpu/cpu*/cpufreq/scaling_governor
path=/sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
target=$1

if [ "$target" == "powersave" ] || [ "$target" == "performance" ]; then
	echo -n "CPU Governor Set To "
	echo $target | sudo tee $paths
else
	current=`cat $path`
	echo $current
fi
